<Window x:Class="Lab1_Gamming_Srammbling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_Gamming_Srammbling"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="500">
    <Grid Margin="0,0,0,6">
        <TextBox x:Name="AESText" HorizontalAlignment="Left" Margin="543,78,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="34"/>
        <TextBox x:Name="AESKey" HorizontalAlignment="Left" Margin="543,140,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="41"/>
        <TextBox x:Name="S1" HorizontalAlignment="Left" Margin="543,204,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="40"/>
        <TextBox x:Name="S2" HorizontalAlignment="Left" Margin="543,261,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="40"/>
        <TextBox x:Name="S3" HorizontalAlignment="Left" Margin="543,327,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="40"/>
        <TextBox x:Name="S4" HorizontalAlignment="Left" Margin="543,385,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="40"/>
        <TextBox x:Name="S5" HorizontalAlignment="Left" Margin="543,447,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="40"/>
        <Button x:Name="AESRUN" Content="AES" HorizontalAlignment="Left" Margin="543,511,0,0" VerticalAlignment="Top" Width="157" Click="AESRUN_Click"/>
        <Label Content="Текст" HorizontalAlignment="Left" Margin="554,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Ключ" HorizontalAlignment="Left" Margin="543,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Text" HorizontalAlignment="Left" Margin="64,144,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="351" Height="52" TextChanged="Text_TextChanged"/>
        <TextBox x:Name="Key" HorizontalAlignment="Left" Margin="64,378,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Height="50" TextChanged="Key_TextChanged"/>
        <TextBox x:Name="Chiphrtext" HorizontalAlignment="Left" Margin="64,477,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Height="50"/>
        <ComboBox x:Name="TextFormat" HorizontalAlignment="Left" Margin="64,62,0,0" VerticalAlignment="Top" Width="127" SelectedIndex="0" DropDownClosed="TextFormat_DropDownClosed" DropDownOpened="TextFormat_DropDownOpened">
            <TextBlock><Run Text="Text"/></TextBlock>
            <TextBlock><Run Text="Binary"/></TextBlock>
            <TextBlock><Run Text="Hexadecimal"/></TextBlock>
        </ComboBox>
        <Button x:Name="CiphButton" Content="Преобразовать" HorizontalAlignment="Left" Margin="66,547,0,0" VerticalAlignment="Top" Click="CiphButton_Click"/>
        <Button x:Name="DeciphButton" Content="Обратное преобразование" HorizontalAlignment="Left" Margin="66,584,0,0" VerticalAlignment="Top" Click="DeciphButton_Click"/>
        <Button x:Name="FileLoad" Content="Получить данные из файла" HorizontalAlignment="Left" Margin="240,584,0,0" VerticalAlignment="Top" Click="FileLoad_Click" Width="176"/>
        <Button x:Name="UpdateKey" Content="Обновить ключ" HorizontalAlignment="Left" Margin="304,347,0,0" VerticalAlignment="Top" Click="UpdateKey_Click" Width="112"/>
        <Button x:Name="SaveFile" Content="Сохранить данные в файл" HorizontalAlignment="Left" Margin="240,547,0,0" VerticalAlignment="Top" Width="176" Click="SaveFile_Click"/>
        <Label Content="Текст" HorizontalAlignment="Left" Margin="66,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Ключ" HorizontalAlignment="Left" Margin="64,339,0,0" VerticalAlignment="Top"/>
        <Label Content="Шифротекст" HorizontalAlignment="Left" Margin="64,446,0,0" VerticalAlignment="Top"/>
        <Label Content="Формат данных" HorizontalAlignment="Left" Margin="66,27,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoadChiphFile" Content="Получить данные шифрования" HorizontalAlignment="Left" Margin="240,623,0,0" VerticalAlignment="Top" Width="176" Click="LoadChiphFile_Click"/>
        <TextBox x:Name="IV" HorizontalAlignment="Left" Margin="66,265,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Height="50" TextChanged="Key_TextChanged"/>
        <Button x:Name="UpdateIV" Content="Обновить вектор инициализации" HorizontalAlignment="Left" Margin="224,232,0,0" VerticalAlignment="Top" Click="UpdateIV_Click" Width="191"/>
        <Label Content="Вектор инициализации" HorizontalAlignment="Left" Margin="66,226,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
